local phase = false
turtle.boundary = {
  next = function()
    if (turtle.detect()) then
      if (phase) then turtle.turnRight() else turtle.turnLeft() end
      local complete = turtle.detect()
      if (phase) then turtle.turnRight() else turtle.turnLeft() end
      if (not complete) then phase = not phase end
      return false
    end
    return turtle.forward()
  end
}
